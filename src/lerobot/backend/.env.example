# =============================================================================
# LeRobot Backend Environment Variables
# =============================================================================
# 이 파일을 .env로 복사하여 사용하세요: cp .env.example .env

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=LeRobot Backend
APP_VERSION=0.1.0
DEBUG=false

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# SQLite (개발용 - 기본값):
DATABASE_URL=sqlite+aiosqlite:///./lerobot_teleop.db

# PostgreSQL (프로덕션):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/lerobot

# SQL 쿼리 로깅 (디버깅용)
DB_ECHO=false

# -----------------------------------------------------------------------------
# Redis (Optional - 캐싱용)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# AWS S3 (영상 저장)
# -----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=ap-northeast-2
S3_BUCKET_NAME=lerobot-teleoperation-data

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
BACKUP_DIR=./lerobot_backup

# -----------------------------------------------------------------------------
# WebSocket & Performance
# -----------------------------------------------------------------------------
WS_BUFFER_SIZE=60
WS_HEARTBEAT_INTERVAL=30

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# API_KEY를 설정하면 모든 엔드포인트에 인증이 필요합니다
# API_KEY=your_secure_api_key_here

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
