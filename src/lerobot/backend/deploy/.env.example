# ============================================
# LeRobot Teleoperation - Production Environment
# ============================================
# Copy this file to .env and fill in the values
# Usage: cp .env.example .env

# ============================================
# PostgreSQL Database
# ============================================
POSTGRES_USER=lerobot
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=lerobot
POSTGRES_PORT=5432

# ============================================
# Redis Cache
# ============================================
REDIS_PORT=6379

# ============================================
# Backend Server
# ============================================
BACKEND_PORT=8000
LOG_LEVEL=INFO

# CORS Origins (comma-separated, or * for all)
CORS_ORIGINS=*

# ============================================
# AWS S3 (Optional - for video storage)
# ============================================
# Leave empty to use local storage
S3_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2

# For MinIO/LocalStack (development)
# S3_ENDPOINT_URL=http://localhost:9000

# ============================================
# Video Upload Settings
# ============================================
VIDEO_MAX_SIZE_MB=500
VIDEO_ALLOWED_EXTENSIONS=mp4,avi,mov,webm

# ============================================
# WebSocket Settings
# ============================================
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=60

# ============================================
# Telemetry Settings
# ============================================
TELEMETRY_BUFFER_SIZE=100
TELEMETRY_FLUSH_INTERVAL=1.0
